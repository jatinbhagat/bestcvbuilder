{
  "grammar_patterns": [
    {
      "pattern": "\\b(I|he|she|it)\\s+(are|were)\\b",
      "message": "Subject-verb disagreement: use \"am/is/was\"",
      "category": "subject_verb_agreement",
      "severity": "high"
    },
    {
      "pattern": "\\b(we|they|you)\\s+(is|was)\\b", 
      "message": "Subject-verb disagreement: use \"are/were\"",
      "category": "subject_verb_agreement",
      "severity": "high"
    },
    {
      "pattern": "\\b(managed|led|developed|created|implemented)\\b.*\\b(manage|lead|develop|create|implement)\\b",
      "message": "Inconsistent verb tenses - use past tense for previous roles",
      "category": "tense_consistency",
      "severity": "medium"
    },
    {
      "pattern": "\\s{2,}",
      "message": "Multiple spaces should be single spaces",
      "category": "formatting",
      "severity": "low"
    },
    {
      "pattern": "\\.[A-Z]",
      "message": "Missing space after period",
      "category": "formatting", 
      "severity": "low"
    },
    {
      "pattern": "\\breturn on investment\\b",
      "message": "Consider using \"ROI\" for resume brevity",
      "category": "resume_optimization",
      "severity": "low"
    },
    {
      "pattern": "\\band etc\\b",
      "message": "Avoid \"etc.\" - be specific about accomplishments",
      "category": "resume_optimization",
      "severity": "medium"
    },
    {
      "pattern": "\\bresponsible for\\b",
      "message": "Use action verbs instead of \"responsible for\"",
      "category": "resume_optimization",
      "severity": "medium"
    },
    {
      "pattern": "\\bduties included\\b",
      "message": "Focus on achievements rather than duties",
      "category": "resume_optimization", 
      "severity": "medium"
    },
    {
      "pattern": "\\bhelped to\\b",
      "message": "Use stronger action verbs than \"helped\"",
      "category": "resume_optimization",
      "severity": "low"
    },
    {
      "pattern": "\\bassisted with\\b",
      "message": "Use more specific action verbs than \"assisted\"",
      "category": "resume_optimization",
      "severity": "low"
    },
    {
      "pattern": "\\bworked on\\b",
      "message": "Be more specific than \"worked on\"",
      "category": "resume_optimization",
      "severity": "medium"
    },
    {
      "pattern": "\\b[A-Z][a-z]+\\s+[a-z]+(?:\\s+[a-z]+)*(?<!\\.)\\s*(?=\\n|$)",
      "message": "Missing full-stop at end of sentence",
      "category": "punctuation",
      "severity": "medium"
    },
    {
      "pattern": "(?:January|February|March|April|May|June|July|August|September|October|November|December)\\s+\\d{4}[\\s\\S]*?(?:Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec)\\s+\\d{4}",
      "message": "Inconsistent date format - use either full month names or abbreviations consistently",
      "category": "date_formatting",
      "severity": "medium"
    },
    {
      "pattern": "\\d{1,2}/\\d{1,2}/\\d{2,4}[\\s\\S]*?\\d{1,2}-\\d{1,2}-\\d{2,4}",
      "message": "Inconsistent date separators - use either slashes or dashes consistently",
      "category": "date_formatting", 
      "severity": "medium"
    },
    {
      "pattern": "\\d{4}-\\d{2}-\\d{2}[\\s\\S]*?\\d{2}/\\d{2}/\\d{4}",
      "message": "Mixed date formats detected - maintain consistency throughout resume",
      "category": "date_formatting",
      "severity": "high"
    }
  ],
